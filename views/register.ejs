<body>
  FORM REGISTER CUSTOMER<br>
  <form>
    Name: <input type="text" name="name"><br>
    Member_ID: <input type="text" name="member_id"><br>
    Address: <input type="text" name="address"><br>
    Zipcode: <input type="text" name="zipcode"><br>
    Phone: <input type="text" name="phone"><br>
    <input type="submit" id="submitdeh"><br>
  </form>
  <br>
  FORM REGISTER ITEMS<br>
  <form action="/api/register/item" method="POST">
    Item_code: <input type="text" name="item_code"><br>
    Name: <input type="text" name="name"><br>
    Description: <input type="text" name="description"><br>
    Price: <input type="number" name="price"><br>
    Stock: <input type="number" name="stock"><br>
    <input type="submit"><br>
  </form>
  <br>
  FORM REGISTER CARTS<br>
  <form action="/api/register/cart" method="POST">
    Member_ID <input type="text" name="member_id"><br>
    Transaction_Date: <input type="date" name="transaction_date"><br>
    Item List: <input type="text" name="item_code"> QTY: <input type="number" name="qty"><br>
    Item List: <input type="text" name="item_code"> QTY: <input type="number" name="qty"><br>
    <input type="submit" id="submitdeh"><br>
  </form>
  ======================================<br>
  <table>
  <div id="customers">
  CUSTOMERS<br>
  <% for (let i in customers){ %>
    <tr>
      <td>Member_ID: <%= customers[i].member_id %></td>
      <td>Name: <%= customers[i].name %></td>
      <td>Address: <%= customers[i].address %></td>
      <td>Zipcode: <%= customers[i].zipcode %></td>
      <td>Phone: <%= customers[i].phone %></td>
      <td><form action="api/customers/delete/<%= customers[i]._id %>" method="POST"><input type="submit" value="delete"></form></td>
      <td><form action="/customers/edit/<%= customers[i]._id %>" method="POST"><input type="submit" value="edit"></form></td>
    </tr>
  <% } %>
  </div>
  </table>
