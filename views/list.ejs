<%- include layout.ejs %>

<div class="page-header">
  <h1>Lil's Store Items</h1>
</div>

<div class='container'>
  <div class="col-lg-6">
    <form id="submit-item">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Item Code</span>
        <input type='text' class='form-control' name='item_code'>
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Name</span>
        <input type='text' class='form-control' name='item_name'>
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Description</span>
        <input type='text' class='form-control' name='description'>
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Price</span>
        <input type='text' class='form-control' name='price'>
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Stock</span>
        <input type='text' class='form-control' name='stock'>
      </div>

      <div class="btn-group" role="group">
        <input type="submit" class="btn btn-default" value="Add New Item" onclick="submitItem()">
      </div>
    </div>
  </form>

  <ul id='items'>List of Items</ul>
</div>

<script text='text/javascript' src='/javascripts/script.js'></script>

</body>
</html>
